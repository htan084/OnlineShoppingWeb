@model IEnumerable<OnlineShoppingWeb.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "Home";
}

    <div class="container">
        <h3 style="background-color: lightblue">Zhen liu's online shop home page</h3>
        <ul class="nav nav-pills nav-justified">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="~/Product/OnlineShopping">Shop online</a></li>
            <li><a href="#">Search</a></li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    login
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="~/Home/AddNew">Register</a></li>
                    <li><a href="~/Product/ShowProductShoppingPage">Customer</a></li>
                    <li><a href="~/Home/MyAdmin">Staff </a></li>
                </ul>
            </li>
        </ul>
    </div>

    <div class="container">
        <br>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="0"></li>
                    }
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">

                @for (int i = 0; i < Model.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="item active">
                            @Html.Image(@Model.ElementAt(i).Url, "width:660px;height:527px", "image does not exit")
                            <div class="carousel-caption">
                                <h3>@Model.ElementAt(i).Name</h3>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            @Html.Image(@Model.ElementAt(i).Url, "width:660px;height:527px", "image does not exit")
                            <div class="carousel-caption">
                                <h3>@Model.ElementAt(i).Name</h3>
                            </div>
                        </div>
                    }

                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @{
        Html.RenderPartial("Footer", new FooterViewModel());
    }
