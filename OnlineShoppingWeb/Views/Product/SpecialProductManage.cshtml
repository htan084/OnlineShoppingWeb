@model IEnumerable<OnlineShoppingWeb.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "SpecialProductManage";
}

<h2>SpecialProductManage</h2>

<div class="container">
    <div class="jumbotron">
        <h1>My first Bootstrap website!</h1>
        <p>This page will grow as we add more and more components from Bootstrap...</p>
        <a href="#" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-search"></span> Search</a>
    </div>

    <div class="row">
        <div class="col-md-5">
            <table border="1">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OnSpecial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OutOfStock)*@
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OnSpecial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OutOfStock)
                        </td>*@
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-2">
            <input type="submit" value=">>>" id="toSpecial" />
            <br>
            <br>
            <br>
            <input type="submit" value="<<<" id="toNormal" />
        </div>
        <div class="col-md-5">
            <table border="1">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OnSpecial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OutOfStock)
                    </th>
                    <th></th>*@
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td onclick="selectToMove(@item.Id)" id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OnSpecial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OutOfStock)
                        </td>*@
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<script>

    function selectToMove(Id) {
        $("#" + Id).css("background-color", "yellow");
    }
</script>