@{
    Layout = null;
}
@using OnlineShoppingWeb.ViewModels
@model OnlineShoppingWeb.ViewModels.ProductViewModelList
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Shopping page</title>
    <link href="~/Bootstrip/bootstrip335css.css" rel="stylesheet" />
    <script src="~/Bootstrip/jquery-1.11.3.js"></script>
    <script src="~/Bootstrip/bootstrip335js.js"></script>
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>My Product</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Picture</th>
                </tr>             
            </thead>
            <tbody>
                   @foreach (var item in Model.ProductList)
                   {
                       <tr>
                           <td>@item.Name</td>
                           <td>@item.Price</td>
                           <td><img src="@item.Url" style="width:40px;height:40px" /></td>
                       </tr>
                   }
                    
            </tbody>
        </table>
    </div>
</body>
</html>
